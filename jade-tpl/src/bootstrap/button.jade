mixin btn(style, size)
  - var styleCls = style ? 'btn-' + style : 'btn-default'
  - var sizeCls = size ? 'btn-' + size : null
  a.btn(class=[styleCls, sizeCls])&attributes(attributes)
    block

mixin btn-icon(icon, text, style, size)
  +btn(style, size)&attributes(attributes)
    +icon(icon)
    | #{text}
    block

mixin btn-group
  .btn-group&attributes(attributes)
    block

mixin caret
  span.caret

mixin btn-dropdown(icon, text, style, size)
  +btn-group&attributes(attributes)
    +btn-icon(icon, text, style, size)
      +caret
    block

mixin btn-refresh
  +btn-icon('refresh', '刷新')
    block

mixin btn-search(text)
  - text || (text = '查询')
  +btn-icon('search', text)
    block

mixin btn-detail
  +btn-icon('file-text-o', '详情')
    block

mixin btn-export
  +btn-icon('download', '导出')
    block

mixin btn-export-dropdown
  +btn-group
    +btn-export&attributes(attributes)
      +caret
    block

mixin btn-more-dropdown
  +btn-group
    +btn-icon('chain', '更多数据')&attributes(attributes)
      +caret
    block
  

mixin btn-search-icon
  +btn-icon('search')