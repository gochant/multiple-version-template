//- panel

mixin panel()
  .panel&attributes(attributes)
    block

mixin panel-toolbar(size)
  .panel-toolbar.clearfix(class=[size ? 'panel-toolbar-' + 'size' : undefined])&attributes(attributes)
    block

mixin btn-toolbar
  .btn-toolbar&attributes(attributes)
    block

mixin panel-n(type, title)
  - var cls = 'panel-' + type
    .panel(class=cls)
      .panel-heading
        h3.panel-title= title
      .panel-body
        block

mixin panel-default(title)
  +panel('default',title)
    block